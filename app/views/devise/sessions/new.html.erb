<div class="container">
  <%= link_to "Sign up", new_registration_path(resource_name) ,class:"btn btn-lg btn-primary " %>
  <%= form_for resource, as: resource_name, url: session_path(resource_name), :html => {:class=>"form-signin" } do |f| %>
      <h2 class="form-signin-heading">Sign In</h2>
      <label for="inputEmail" class="sr-only">Email address</label>
      <%= f.email_field :email, class: "form-control" ,autofocus: true ,placeholder:"Email"%><br>
      <label for="inputPassword" class="sr-only">Password</label>
      <%= f.password_field :password, autocomplete: "off",class: "form-control" ,placeholder:"Password"%>
      <div class="checkbox">
        <% if devise_mapping.rememberable? -%>
            <label>
              <input type="checkbox" value="remember-me"> Remember me
            </label>
            </div>
        <%end%>
        <%= f.submit "Log in",class:"btn btn-lg btn-primary btn-block" %><br>
        <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
  <% end %>
 </div>

